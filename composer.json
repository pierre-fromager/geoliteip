{
    "name": "pf.pier-infor.fr/geoliteip",
    "description": "Pier-Infor Geoliteip.",
    "keywords": ["php", "geoip", "maxmind", "free"],
    "license": "GNU3",
    "type": "project",
    "version": "1.0",
    "require": {
        "geoip2/geoip2": "~2.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "PierInfor\\": "src/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "scripts": {
        "test": [
            "phpunit --coverage-html='./coverage' --bootstrap tests/bootstrap.php tests"
        ],
        "checklint": [
            "phpcs --standard=PSR2 --warning-severity=0 --extensions=php src/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=0 --extensions=php src/*"
        ]
    }
}